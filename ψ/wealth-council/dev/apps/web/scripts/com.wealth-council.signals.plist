<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>Label</key>
    <string>com.wealth-council.signals</string>

    <key>ProgramArguments</key>
    <array>
        <string>/usr/bin/curl</string>
        <string>-s</string>
        <string>http://localhost:3200/api/cron/signals</string>
    </array>

    <!-- Run every 5 minutes (300 seconds) -->
    <key>StartInterval</key>
    <integer>300</integer>

    <!-- Also run when loaded -->
    <key>RunAtLoad</key>
    <false/>

    <!-- Log output -->
    <key>StandardOutPath</key>
    <string>/tmp/wealth-council-cron.log</string>
    <key>StandardErrorPath</key>
    <string>/tmp/wealth-council-cron-error.log</string>
</dict>
</plist>
